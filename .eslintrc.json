{
    "env": {
        "es6": true,
        "browser": true,
        "es2021": true,
        "node": true,
        "mocha": true,
        "jquery": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 2, { "SwitchCase": 1 ,"ignoredNodes": ["ConditionalExpression"] }],  // Indentation de 2 espaces avec 1 niveau pour les `case`
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single", { "avoidEscape": true }],
        "semi": ["error", "always"],
        "no-unused-vars": ["warn"],
        "no-console": "off"
    }
}
